{
	"name": "file-storage",
	"version": "1.0.0",
	"description": "A typescript nodejs server to serve file upload",
	"main": "dist/index.js",
	"engines": {
		"node": "^18",
		"npm": "^9",
		"yarn": "please-use-npm-instead"
	},
	"engineStrict": true,
	"scripts": {
		"prepare": "echo 'installing husky...' && husky install",
		"start:dev": "nodemon --legacy-watch",
		"build": "rimraf ./dist && tsc",
		"postbuild": "node ./copy-assets",
		"start": "node .",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"prettify": "prettier --config .prettierrc '**/*.{ts,js,json}'",
		"prettify:fix": "prettier --config .prettierrc '**/*.{ts,js,json}' --write",
		"prettify:watch": "onchange '**/*.{ts,js,json}' --exclude-path .prettierignore -- prettier --config .prettierrc --write {{changed}}",
		"test": "make run-test-up",
		"posttest": "make run-test-down",
		"exec-tests": "mocha -r ts-node/register '__tests__/**/*.spec.ts' --exit",
		"commit": "commit"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/shahanahmed86/file-storage.git"
	},
	"keywords": [
		"file-storage",
		"nodejs",
		"node",
		"typescript",
		"ts"
	],
	"author": "Shahan Ahmed Khan",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/shahanahmed86/file-storage/issues"
	},
	"homepage": "https://github.com/shahanahmed86/file-storage#readme",
	"dependencies": {
		"cluster": "^0.7.7",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-fileupload": "^1.4.3",
		"helmet": "^7.0.0",
		"husky": "^8.0.0",
		"i18n": "^0.15.1",
		"inquirer": "^8.2.5",
		"lodash": "^4.17.21",
		"morgan": "^1.10.0",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^4.6.0",
		"toobusy-js": "^0.5.1",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.5",
		"@commitlint/config-conventional": "^17.6.5",
		"@commitlint/prompt-cli": "^17.6.5",
		"@types/chai": "^4.3.4",
		"@types/compression": "^1.7.4",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/express-fileupload": "^1.4.1",
		"@types/i18n": "^0.13.10",
		"@types/inquirer": "^8.2.5",
		"@types/lodash": "^4.14.202",
		"@types/mocha": "^10.0.1",
		"@types/morgan": "^1.9.4",
		"@types/node": "^18.11.19",
		"@types/swagger-jsdoc": "^6.0.1",
		"@types/swagger-ui-express": "^4.1.3",
		"@types/toobusy-js": "^0.5.2",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.50.0",
		"chai": "^4.3.7",
		"chai-http": "^4.3.0",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-security": "^1.7.1",
		"lint-staged": "^13.1.0",
		"mocha": "^10.2.0",
		"nodemon": "^2.0.20",
		"onchange": "^7.1.0",
		"prettier": "^2.8.3",
		"rimraf": "^4.1.2",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5"
	}
}
